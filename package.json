{
  "name": "bonkers-ui",
  "version": "2.0.0",
  "type": "module",
  "description": "Bonkers ui library",
  "author": "cc6.magister@gmail.com",
  "scripts": {
    "dev": "storybook dev -p 6006",
    "deploy": "gh-pages -d storybook-static",
    "lint": "eslint --fix './src/**/*.{ts,tsx}'",
    "lint:style": "bun run prettier './src/**/*.{css,scss}' --check",
    "upgrade": "bun update --interactive",
    "build-storybook": "storybook build",
    "build": "tsc && vite build",
    "typecheck": "tsc --noEmit",
    "i": "bun install --frozen-lockfile",
    "pack": "bun run build && bun run postbuild.ts && cd dist && npm pack --pack-destination ../",
    "prepare": "husky"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "classnames": "^2.5.1",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "storybook": "^10.1.3",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "ajv": "^8.17.1",
    "vite": "^7.2.6"
  },
  "devDependencies": {
    "vite-tsconfig-paths": "^5.1.4",
    "@chromatic-com/storybook": "^4.1.3",
    "prettier": "^3.7.3",
    "@storybook/addon-docs": "^10.1.3",
    "@storybook/addon-onboarding": "^10.1.3",
    "@storybook/react-vite": "^10.1.3",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/bun": "1.3.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-better-tailwindcss": "^3.7.11",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-storybook": "^10.1.3",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "gh-pages": "^6.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript-eslint": "^8.48.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-lib-inject-css": "^2.2.2"
  },
  "peerDependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.6.0",
    "@fortawesome/free-brands-svg-icons": "^6.6.0",
    "@fortawesome/free-regular-svg-icons": "^6.6.0",
    "@fortawesome/free-solid-svg-icons": "^6.6.0",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "classnames": "^2",
    "react": "^19",
    "react-dom": "^19",
    "tailwindcss": "^4.1.17"
  },
  "lint-staged": {
    "./src/**/*.css": [
      "bun prettier --check"
    ],
    "./src/**/*.{ts,tsx}": [
      "bun eslint --fix",
      "bash -c 'bun typecheck'"
    ]
  },
  "keywords": [],
  "license": "ISC",
  "main": "./index.js",
  "module": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": "./index.js",
    "./types/*": {
      "import": "./_types/*.js",
      "types": "./_types/*.d.ts*"
    },
    "./theme": "./bonkers.css",
    "./*": {
      "types": "./components/*/index.d.ts",
      "import": "./components/*/index.js"
    },
    "./components/*": {
      "types": "./components/*",
      "import": "./components/*"
    },
    "./eslint.config.mjs": "./eslint.config.mjs"
  },
  "sideEffects": [
    "*.css",
    "./assets/*.css"
  ]
}
