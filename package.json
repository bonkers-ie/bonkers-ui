{
	"name": "bonkers-ui",
	"version": "2.0.0",
	"description": "Bonkers ui library",
	"author": "cc6.magister@gmail.com",
	"scripts": {
		"dev": "storybook dev -p 6006",
		"deploy": "gh-pages -d storybook-static",
		"lint": "eslint --fix './src/**/*.{ts,tsx}'",
		"lint:style": "bun run prettier './src/**/*.{css,scss}' --check",
		"upgrade": "bun x npm-check-updates -ui",
		"build-storybook": "storybook build",
		"build": "vite build",
		"typecheck": "tsc --noEmit",
		"i": "bun install --frozen-lockfile",
		"pack": "bun run build && bun run postbuild.ts && cd dist && npm pack --pack-destination ../",
		"prepare": "husky"
	},
	"dependencies": {
		"classnames": "^2.5.1",
		"prettier": "^3.4.2",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"stylelint": "^16.13.2",
		"stylelint-config-standard": "^37.0.0",
		"stylelint-config-tailwindcss": "^0.0.7",
		"stylelint-prettier": "^5.0.2",
		"tailwindcss": "^3.4.17",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3.2.3",
		"@storybook/addon-essentials": "^8.5.0",
		"@storybook/addon-interactions": "^8.5.0",
		"@storybook/addon-onboarding": "^8.5.0",
		"@storybook/blocks": "^8.5.0",
		"@storybook/manager-api": "^8.5.0",
		"@storybook/preview-api": "^8.5.0",
		"@storybook/react": "^8.5.0",
		"@storybook/react-vite": "^8.5.0",
		"@storybook/test": "^8.5.0",
		"@stylistic/eslint-plugin": "^2.13.0",
		"@types/bun": "latest",
		"@types/react-dom": "^19.0.3",
		"@vitejs/plugin-react": "^4.3.4",
		"ajv": "^8.17.1",
		"autoprefixer": "^10.4.20",
		"eslint": "^9.18.0",
		"eslint-plugin-react": "^7.37.4",
		"eslint-plugin-storybook": "^0.11.2",
		"eslint-plugin-tailwindcss": "^3.17.5",
		"gh-pages": "^6.3.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.4.0",
		"postcss": "^8.5.1",
		"storybook": "^8.5.0",
		"storybook-dark-mode": "^4.0.2",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.0.7",
		"vite-plugin-dts": "^4.5.0",
		"vite-plugin-lib-inject-css": "^2.2.1"
	},
	"peerDependencies": {
		"@fortawesome/fontawesome-svg-core": "^6.6.0",
		"@fortawesome/free-brands-svg-icons": "^6.6.0",
		"@fortawesome/free-regular-svg-icons": "^6.6.0",
		"@fortawesome/free-solid-svg-icons": "^6.6.0",
		"@fortawesome/react-fontawesome": "^0.2.2",
		"classnames": "^2",
		"react": "^18",
		"react-dom": "^18",
		"tailwindcss": "^3"
	},
	"lint-staged": {
		"./src/**/*.css": [
			"bun prettier --check"
		],
		"./src/**/*.{ts,tsx}": [
			"bun eslint --fix",
			"bash -c 'bun typecheck'"
		]
	},
	"keywords": [],
	"license": "ISC",
	"main": "./bonkers-ui.umd.js",
	"module": "./index.js",
	"types": "./index.d.ts",
	"exports": {
		".": "./index.js",
		"./types": {
			"import": "./types.js",
			"types": "./types.d.ts"
		},
		"./plugin": "./plugin.ts",
		"./*": {
			"types": "./components/*/index.d.ts",
			"import": "./components/*/index.js"
		},
		"./components/*": {
			"types": "./components/*/index.d.ts",
			"import": "./components/*/index.js"
		},
		"./postcss.config.mjs": "./postcss.config.mjs",
		"./eslint.config.mjs": "./eslint.config.mjs"
	}
}
