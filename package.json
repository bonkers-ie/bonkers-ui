{
	"name": "bonkers-ui",
	"version": "2.0.0",
	"type": "module",
	"description": "Bonkers ui library",
	"author": "cc6.magister@gmail.com",
	"scripts": {
		"dev": "storybook dev -p 6006",
		"deploy": "gh-pages -d storybook-static",
		"lint": "eslint --fix './src/**/*.{ts,tsx}'",
		"lint:style": "bun run prettier './src/**/*.{css,scss}' --check",
		"upgrade": "bun x npm-check-updates -ui",
		"build-storybook": "storybook build",
		"build": "tsc && vite build",
		"typecheck": "tsc --noEmit",
		"i": "bun install --frozen-lockfile",
		"pack": "bun run build && bun run postbuild.ts && cd dist && npm pack --pack-destination ../",
		"prepare": "husky"
	},
	"dependencies": {
		"@tailwindcss/vite": "^4.1.7",
		"ajv": "^8.17.1",
		"classnames": "^2.5.1",
		"postcss": "^8.5.3",
		"prettier": "^3.5.3",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"tailwindcss": "^4.1.7",
		"vite-tsconfig-paths": "^5.1.4"
	},
	"devDependencies": {
		"@chromatic-com/storybook": "^3.2.6",
		"@storybook/addon-essentials": "^8.6.14",
		"@storybook/addon-interactions": "^8.6.14",
		"@storybook/addon-onboarding": "^8.6.14",
		"@storybook/blocks": "^8.6.14",
		"@storybook/manager-api": "^8.6.14",
		"@storybook/preview-api": "^8.6.14",
		"@storybook/react": "^8.6.14",
		"@storybook/react-vite": "^8.6.14",
		"@storybook/test": "^8.6.14",
		"@stylistic/eslint-plugin": "^4.2.0",
		"@types/bun": "latest",
		"@types/react": "^19.1.4",
		"@types/react-dom": "^19.1.5",
		"@vitejs/plugin-react": "^4.4.1",
		"eslint": "^9.27.0",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-storybook": "^0.12.0",
		"eslint-plugin-tailwindcss": "^3.18.0",
		"gh-pages": "^6.3.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.1",
		"storybook": "^8.6.14",
		"storybook-dark-mode": "^4.0.2",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.32.1",
		"vite": "^6.3.5",
		"vite-plugin-dts": "^4.5.4",
		"vite-plugin-lib-inject-css": "^2.2.2"
	},
	"peerDependencies": {
		"@fortawesome/fontawesome-svg-core": "^6.6.0",
		"@fortawesome/free-brands-svg-icons": "^6.6.0",
		"@fortawesome/free-regular-svg-icons": "^6.6.0",
		"@fortawesome/free-solid-svg-icons": "^6.6.0",
		"@fortawesome/react-fontawesome": "^0.2.2",
		"classnames": "^2",
		"react": "^18",
		"react-dom": "^18",
		"tailwindcss": "^4"
	},
	"lint-staged": {
		"./src/**/*.css": [
			"bun prettier --check"
		],
		"./src/**/*.{ts,tsx}": [
			"bun eslint --fix",
			"bash -c 'bun typecheck'"
		]
	},
	"keywords": [],
	"license": "ISC",
	"main": "./index.js",
	"module": "./index.js",
	"types": "./index.d.ts",
	"exports": {
		".": "./index.js",
		"./types/*": {
			"import": "./_types/*.js",
			"types": "./_types/*.d.ts*"
		},
		"./theme": "./bonkers.css",
		"./*": {
			"types": "./components/*/index.d.ts",
			"import": "./components/*/index.js"
		},
		"./components/*": {
			"types": "./components/*",
			"import": "./components/*"
		},
		"./eslint.config.mjs": "./eslint.config.mjs"
	},
	"sideEffects": [
		"*.css",
		"./assets/*.css"
	]
}
